<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Select">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/helpywork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELPYWORK"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="#2CAA7B"
            android:textSize="20dp"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teacherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professeur"
                android:textColor="#666666"
                android:fontFamily="casual"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/teacherButton"
                android:layout_width="258dp"
                android:layout_height="154dp"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/teacher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/studentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ã‰tudiant"
                android:textColor="#666666"
                android:fontFamily="casual"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/studentButton"
                android:layout_width="258dp"
                android:layout_height="137dp"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/etudiant" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>